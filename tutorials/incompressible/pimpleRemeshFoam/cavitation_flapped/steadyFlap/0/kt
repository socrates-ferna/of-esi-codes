FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      kt;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];


internalField   uniform 0.00375;

boundaryField
{
    flap
    {
        type            kqRWallFunction;
        value           uniform 0.00375;
    }
    freestream
    {
        type            freestream;
        freestreamValue uniform 0.00375;
        value           uniform 0.00375;
    }
    main
    {
        type            kqRWallFunction;
        value           uniform 0.00375;
    }
    BaseAndTop
    {
        type            empty;
    }
}


