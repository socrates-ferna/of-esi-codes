FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application       pimpleFoam;

startFrom         latestTime;

startTime         0;

stopAt            endTime;

endTime           1e-5;

deltaT            5e-6;

maxDeltaT         0.01;

adjustTimeStep    no;

maxCo             1.0;

writeControl      adjustableRunTime;

writeInterval     0.2;

purgeWrite        0;

writeFormat       ascii;

writePrecision    6;

writeCompression  off;

timeFormat        general;

timePrecision     6;

runTimeModifiable true;

functions
{
    #include "include/forceCoefficients"
    #include "include/yPlus"
    #include "include/residuals"
}

