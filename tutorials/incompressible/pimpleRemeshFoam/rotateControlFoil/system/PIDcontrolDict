FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      PIDcontrolDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

PIDcontroller
{
    type            PID;
    P               -0.3097;
    I               -0.4533;
    D               0;
    controlDelay    0.1;
    actuatorModel   linear;
    actuatorModelCoeffs
    {
        // Remember sign criteria is positive counterclockwise
        angleMax    #calc "20*constant::mathematical::pi/180";
        angleMin    #calc "-20*constant::mathematical::pi/180";
        omegaMax    #calc "20*constant::mathematical::pi/180";
        omegaMin    #calc "-20*constant::mathematical::pi/180";
    }
    controlTarget   1;
    controlledVarData
    {
        type            lforceCoeffs;
        libs            ( lforces );
        patches         ( airfoil );
        rho             rhoInf;
        rhoInf          1;
        CofR            ( 0.25 0 0 );
        liftDir         ( -0.2 0.5 0 );
        dragDir         ( 0.5 0.2 0 );
        pitchAxis       ( 0 0 1 );
        magUInf         1;
        lRef            1;
        Aref            1;
        direction       0;
        setPoint        0.7;
    }
}


