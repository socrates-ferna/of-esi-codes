FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1.11e5; // it is dependent on depth, how to set up this?


boundaryField
{
    freestream
    {
        type            freestreamPressure;
        freestreamValue uniform 1.11e5;
    }
    airfoil
    {
        type            zeroGradient;
    }
    BaseAndTop
    {
        type            empty;
    }
}