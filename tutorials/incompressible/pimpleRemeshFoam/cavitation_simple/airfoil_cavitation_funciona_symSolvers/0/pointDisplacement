FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    location    "0";
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];


internalField   uniform (0 0 0);

boundaryField
{
    airfoil
    {
        type            angularOscillatingDisplacement;
        axis            ( 0 0 1 );
        origin          ( 0.25 0 0 );
        angle0          0;
        amplitude       0.0872665;
        omega           0.1;
        value           uniform ( 0 0 0 );
    }
    freestream
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    BaseAndTop
    {
        type            empty;
    }
}


